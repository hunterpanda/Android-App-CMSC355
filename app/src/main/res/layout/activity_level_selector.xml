<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelSelector">
    <TextView
        android:id="@+id/LevelText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Levels" />

    <Button
        android:id="@+id/level1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LevelText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Beginnings"/>

    <Button
        android:id="@+id/level2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level1"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@id/level1"
        android:text="New people" />

    <Button
        android:id="@+id/level3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level1"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/level1"
        android:text="Family" />

    <Button
        android:id="@+id/level4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level2"
        android:layout_marginTop="4dp"
        android:layout_alignStart="@id/level2"
        android:text="friendships" />

    <Button
        android:id="@+id/level5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/level3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="-151dp"
        android:layout_alignStart="@id/level3"
        android:text="vacation" />


</RelativeLayout>